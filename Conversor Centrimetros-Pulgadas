# Hacer una variable para la constante 2.54

print("Este es un conversor de centímetros a pulgadas.")
try:
    centimetros = input("Ingresá tu valor en centímetros, separando los decimales con un punto: ")
    valor_de_conversion = 2.54
    resultado = float(centimetros) * valor_de_conversion
    print(f"Tu valor en pulgadas es: {resultado}")

except ValueError:
    print("Por favor, ingresá un número válido.")





