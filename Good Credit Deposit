price_house = 1000000
good_credit_deposit = price_house * 0.1
bad_credit_deposit = price_house * 0.2
good_credit = False

if good_credit:
    print(f"You need to put down {good_credit_deposit} dollars.")
else:
    print(f"You need to put down {bad_credit_deposit} dollars")

# La version mejorada es:

price = 1000000
good_credit = True

if good_credit:
    downpayment = price * 0.1
else:
    downpayment = price * 0.2

print(f"Downpayment: ${downpayment}")



